<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE queries SYSTEM "querymapping.dtd">
<queries>
<query name="query_filtre_patient_recherche" type="sql" class="clinique.mapping.Patient">
    <mappings>
       <mapping property="nom" column="nom"/>
       <mapping property="prenom" column="prenom"/>
       <mapping property="cni"  column="cni" />
       <mapping property="nni" column="nni"/>
       <mapping property="numeroBadge"  column="numero_badge" />
       <mapping property="patientId" column="patient_id" />
 
    </mappings>
	<body>
	<![CDATA[
             select pt.patient_id,pt.numero_badge, pt.nom, pt.prenom, pt.nni, pt.cni  from  tbl_patient	pt	  
      ]]>
	</body>
	
</query>
</queries>